<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/css/modal.css" />
    <link rel="stylesheet" href="~/css/newSide.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="main-menu">
        <div class="logo">.</div>
        <div class="settings">
            @if (User.Identity.IsAuthenticated)
            {var fullName = User.Claims.Where(x => x.Type == System.Security.Claims.ClaimTypes.Name).Select(x => x.Value).FirstOrDefault();
                <span class="username">@fullName</span>}
            else{<span class="username">User</span>}
        </div>
        <div class="scrollbar" id="style-1">
            <ul>
                @{
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                }
                <li class="has-subnav @(currentController == "Auth" ? "active" : "")">
                    <a asp-action="Dashboard" asp-controller="Auth">
                        <i class="fa fa-tachometer fa-lg"></i>
                        <span class="nav-text"> Dashboard </span>
                    </a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Home">
                        <i class="fa fa-home fa-lg"></i>
                        <span class="nav-text">Symphony</span>
                    </a>
                </li>
                <li class="@(currentController == "Student" ? "active" : "")">
                    <a asp-controller="Student" asp-action="Index">
                        <i class="fa fa-users fa-lg"></i>
                        <span class="nav-text">Students</span>
                    </a>
                </li>
                <li class="@(currentController == "Exam" ? "active" : "")">
                    <a asp-controller="Exam" asp-action="Index">
                        <i class="fa fa-desktop fa-lg"></i>
                        <span class="nav-text">Exams</span>
                    </a>
                </li>
                <li class="has-subnav @(currentController == "Course" ? "active" : "")">
                    <a asp-controller="Course" asp-action="Index">
                        <i class="fa fa-plane fa-lg"></i>
                        <span class="nav-text"> Courses </span>
                    </a>
                </li>
                <li class="@(currentController == "About" ? "active" : "")">
                    <a asp-controller="About" asp-action="Index">
                        <i class="fa fa-shopping-cart"></i>
                        <span class="nav-text"> About </span>
                    </a>
                </li>
                <li class="@(currentController == "Gallery" ? "active" : "")">
                    <a asp-controller="Gallery" asp-action="Index">
                        <i class="fa fa-picture-o fa-lg"></i>
                        <span class="nav-text"> Gallery </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-flask fa-lg"></i>
                        <span class="nav-text"> Web Tools </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-picture-o fa-lg"></i>
                        <span class="nav-text"> Art & Design </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-align-left fa-lg"></i>
                        <span class="nav-text"> Magazines </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-gamepad fa-lg"></i>
                        <span class="nav-text"> Games </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-glass fa-lg"></i>
                        <span class="nav-text"> Life & Style </span>
                    </a>
                </li>
                <li class="has-subnav">
                    <a href="#">
                        <i class="fa fa-rocket fa-lg"></i>
                        <span class="nav-text"> Fun </span>
                    </a>
                </li>
            </ul>
            <ul class="logout">
                <li>
                    <a href="#">
                        <i class="fa fa-lightbulb-o fa-lg"></i>
                        <span class="nav-text"> BLOG </span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    @* <div class="user-menu" id="userMenu">
                @if (User.Identity.IsAuthenticated)
                {
                    var fullName = User.Claims.Where(x => x.Type == System.Security.Claims.ClaimTypes.Name).Select(x => x.Value).FirstOrDefault();
                    <span class="username">
                        @fullName
                    </span>
                }
                else
                {
                    <span class="username">
                        User
                    </span>
                }
                <div class="dropdown" id="dropdownMenu">
                    <a href="">Messages</a>
                    <a asp-controller="Auth" asp-action="Logout">Logout</a>
                </div>
            </div> *@

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>

    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

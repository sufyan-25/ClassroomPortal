@{
    ViewData["Title"] = "Dashboard";
}

<!-- Content -->
<div class="content" id="mainContent">
    <div class="container-fluid">
        <!-- Dashboard Cards -->
        <div class="row g-3 mb-4">
            <div class="card p-3">
                <h3 class="card-title">Students Details</h3>
                <p class="text-muted mb-0">Passed, Failed, Entrance, Enrolled</p>
            </div>
            @foreach (var item in ViewBag.StCount)
            {
                <div class="col-md-3">
                    <div class="card p-3">
                        <h5 class="card-title">@item.Status : Student</h5>
                        <p class="card-text fs-4 fw-bold">@item.Count</p>
                    </div>
                </div>
            }
        </div>
        <div class="row g-3 mb-4">
            <div class="card p-3">
                <h3 class="card-title">Courses Details</h3>
                <p class="text-muted mb-0">Courses, Topics etc</p>
            </div>
            <div class="col-md-3">
                <div class="card p-3">
                    <h5 class="card-title">Courses</h5>
                    <p class="card-text fs-4 fw-bold">@ViewBag.CourseCount</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3">
                    <h5 class="card-title">Topics</h5>
                    <p class="card-text fs-4 fw-bold">@ViewBag.TopicCount</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3">
                    <h5 class="card-title">Topics</h5>
                    <p class="card-text fs-4 fw-bold">@ViewBag.TopicCount</p>
                </div>
            </div>
        </div>
        <div class="row g-3 mb-4">
            <div class="card p-3">
                <h3 class="card-title">Branches</h3>
                <div>
                <p class="text-muted mb-0">Active Branches</p>
                    <a asp-controller="Contact" asp-action="Index" class="btn btn-primary">View Details</a>
                </div>
            </div>
            @foreach(var x in ViewBag.Branches)
            {
            <div class="col-md-3">
                <div class="card p-3">
                    <h5 class="card-title">@x.BranchName</h5>
                        <p class="text-muted mb-0">PTCL : @x.PTCL</p>
                        <p class="text-muted mb-0">Whatsapp : @x.Whatsapp</p>
                </div>
            </div>
            }
        </div>
    </div>
</div>



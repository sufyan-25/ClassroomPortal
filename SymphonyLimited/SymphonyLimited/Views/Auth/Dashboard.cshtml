@{
    ViewData["Title"] = "Dashboard";
}

<!-- Content -->
<div class="content" id="mainContent">
    <div class="container-fluid">
        <!-- Dashboard Cards -->
        <div class="row g-3 mb-4">
            @foreach (var item in ViewBag.StCount)
            {
                <div class="col-md-3">
                    <div class="card p-3">
                        <h5 class="card-title">@item.Status : Student</h5>
                        <p class="card-text fs-4 fw-bold">@item.Count</p>
                        <p class="text-muted mb-0">This Month</p>
                        <button class="btn btn-primary btn-sm" onclick="">View Details</button>
                    </div>
                </div>
            }
        </div>

        <!-- New Added -->
        <!-- Charts Section -->
        @* <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="card p-3">
                    <h5 class="card-title">Monthly Sales</h5>
                    <canvas id="salesChart" height="150"></canvas>
                </div>
            </div>
            <div class="col-md-6">

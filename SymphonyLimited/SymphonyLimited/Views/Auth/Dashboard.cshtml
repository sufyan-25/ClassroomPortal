                    <h5 class="card-title">New Customers</h5>
                    <canvas id="customersChart" height="150"></canvas>
                </div>
            </div>
        </div> *@
        <!-- Table -->
        <div class="table-responsive mb-4">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Toy Car</td>
                        <td>Vehicles</td>
                        <td>Rs. 1200</td>
                        <td>30</td>
                        <td>
                            <button class="btn-action">Edit</button>
                            <button class="btn-action">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Edit Product Modal -->
        <div class="modal fade" id="gallery" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">Select Image</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex gap-3">
                            <label class="position-relative">
                                <input type="radio" name="imageSelect" value="" class="form-check-input getImage position-absolute top-0 end-0 m-2">
                                <img src="" class="border rounded" width="150" height="150">
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" id="getImage">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



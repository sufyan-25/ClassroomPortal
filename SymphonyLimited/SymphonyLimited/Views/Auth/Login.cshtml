@model SymphonyLimited.ViewModel.LoginView
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        margin: 0;
        height: 100vh;
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-container {
        display: flex;
        width: 850px;
        height: 500px;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        background: #f4f6f8;
    }

    .login-left {
        flex: 1;
        background: linear-gradient(160deg, #1e3a8a, #0f2027);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px;
    }

        .login-left .logo {
            font-size: 2.2rem;
            letter-spacing: 1px;
        }

        .login-left .desc {
            margin-top: 10px;
            font-size: 1rem;
            text-align: center;
            color: #dce4f2;
            max-width: 280px;
        }

    .login-right {
        flex: 1;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-right h2 {
            color: #1e3a8a;
            margin-bottom: 25px;
            text-align: center;
        }

    form {
        display: flex;
        flex-direction: column;
    }

    label {
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 6px;
    }

    input[type="text"],
    input[type="password"] {
        padding: 12px;
        margin-bottom: 18px;
        border-radius: 8px;
        border: 1px solid #ccc;
        outline: none;
        font-size: 15px;
        transition: all 0.3s ease;
    }

    input:focus {
        border-color: #1e3a8a;
        box-shadow: 0 0 4px #1e3a8a;
    }

    .options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .options a {
            text-decoration: none;
            color: #1e3a8a;
            font-size: 0.9rem;
        }

            .options a:hover {
                text-decoration: underline;
            }

    .login-btn {
        background-color: #1e3a8a;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s ease;
    }

    .login-btn:hover {
            background-color: #2c5364;
    }

    .text-danger {
        color: #e63946; /* Elegant red for validation */
        font-size: 0.9rem;
        font-weight: 500;
        margin-top: 4px;
        display: block;
    }

    .validation-summary-errors {
        background-color: rgba(230, 57, 70, 0.1);
        border-left: 4px solid #e63946;
        padding: 10px 12px;
        border-radius: 6px;
        color: #b91c1c;
        margin-bottom: 15px;
        font-size: 0.95rem;
    }
</style>
<div class="login-container">
    <div class="login-left">
        <h1 class="logo">Symphpony</h1>
        <p class="desc">Staff Portal — Login securely to manage your dashboard and updates.</p>
    </div>

    <div class="login-right">
        <h2>Staff Login</h2>
        <form asp-action="Login">
            @if (ViewBag.Message != null)
            {
                <div class="validation-summary-errors">
                    @ViewBag.Message
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            <label asp-for="Username"></label>
            <input asp-for="Username" type="text" placeholder="Enter your username" required>
            <span asp-validation-for="Username" class="text-danger"></span>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" placeholder="Enter your password" required>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="options">
                <label><input asp-for="RememberMe" type="checkbox"> Remember me</label>
                <a href="#">Forgot password?</a>
            </div>

            <button type="submit" class="login-btn">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

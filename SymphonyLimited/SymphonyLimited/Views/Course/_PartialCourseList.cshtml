@model IEnumerable<SymphonyLimited.Models.Course>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Data Loading...</div>
}
else
{
    <div class="content" id="mainContent">
        <div class="container-fluid">
            @foreach(var x in Model)
            {
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card p-3">
                            <h5 class="card-title">@x.Name</h5>
                        <p class="card-text fs-4 fw-bold">@x.Topics.Count()</p>
                            @foreach(var y in x.Topics)
                            {
                            <p class="text-muted mb-0">@y.Name</p>
                            }
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">Manage Courses</h3>
        <button class="btn btn-success btn-sm">Add New Course</button>
    </div>

    <!-- Course Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Duration</th>
                    <th>Fee</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dummy data -->
                <tr>
                    <td>Web Development</td>
                    <td>Learn front-end and back-end web technologies.</td>
                    <td>3 Months</td>
                    <td>$300</td>
                    <td>
                        <button class="btn btn-sm btn-primary" data-bs-toggle="collapse" data-bs-target="#topics1">Topics</button>
                        <button class="btn btn-sm btn-warning">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="5" class="p-0">
                        <!-- Topics Collapse -->
                        <div class="collapse" id="topics1">
                            <div class="p-3 bg-light">
                                <h6 class="fw-bold text-secondary">Course Topics</h6>
                                <table class="table table-sm table-bordered mb-2">
                                    <thead class="table-secondary">
                                        <tr>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Image</th>

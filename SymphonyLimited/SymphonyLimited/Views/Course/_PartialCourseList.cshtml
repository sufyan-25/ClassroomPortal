@model IEnumerable<SymphonyLimited.Models.Course>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Data Loading...</div>
}
else
{
    <!-- Course Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Duration</th>
                    <th>Fee</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{var index = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Name</td>
                        <td class="text-truncate" style="max-width: 250px;">@x.Description</td>
                        <td>@x.Duration</td>
                        <td>@x.Fee</td>
                        <td>
                            <input type="text" id="FID" value="@x.Id" hidden />
                            <button class="btn btn-sm btn-primary" data-bs-toggle="collapse" data-bs-target="@(index>=0 ? $"#topic{index}":"")">Topics</button>
                            <button class="btn btn-sm btn-warning" id="edit">Edit</button>
                            <button class="btn btn-sm btn-danger" id="delete">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5" class="p-0">
                            <!-- Topics Collapse -->
                            <div class="collapse" id="@(index >= 0 ? $"topic{index}" : "")">
                                <div class="p-3 bg-light">
                                    <h6 class="fw-bold text-secondary">Course Topics</h6>
                                        <div class="row g-4">
                                    @foreach (var y in x.Topics)
                                    {
                                            <div class="col-md-4 col-lg-3">
                                                <div class="card h-100 shadow-sm border-0">
                                                    <img src="~/img/sym.jpg" class="card-img-top" style="width:150px" alt="Topic Image">
                                                    <div class="card-body">
                                                        <h5 class="card-title text-primary">@y.Name</h5>
                                                        <p class="card-text text-muted text-truncate">@y.Description</p>
                                                    </div>
                                                    <div class="card-footer bg-transparent border-0 text-center">
                                                        <button class="btn btn-primary w-100">Enroll Now</button>
                                                    </div>
                                                </div>
                                            </div>
                                    }
                                        </div>
                                    <button class="btn btn-sm btn-success">Add New Topic</button>
                                </div>
                            </div>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
}

<div class="container-fluid p-0">
    <!-- Course Cover Section -->
    <div class="position-relative">
        <img src="~/img/page-header.jpg" class="img-fluid w-100" alt="Course Cover" style="height: 400px; object-fit: cover;">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white bg-dark bg-opacity-50 p-4 rounded">
            <h1 class="fw-bold">Web Development</h1>
            <p class="lead mb-2">Master front-end and back-end technologies for modern web applications</p>
            <div>
                <span class="badge bg-primary me-2">Duration: 3 Months</span>
                <span class="badge bg-success">Fee: $300</span>
            </div>
        </div>
    </div>
</div>

<!-- Course Description -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h3 class="fw-bold text-primary">Course Overview</h3>
        <p class="text-muted">This course is designed to help you gain a solid foundation in full-stack web development using the latest tools and frameworks.</p>
    </div>

    <!-- Course Topics -->
    <div class="row g-4">
        <!-- Topic 1 -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="~/img/sym.jpg" class="card-img-top" alt="Topic Image">
                <div class="card-body">
                    <h5 class="card-title text-primary">HTML & Structure</h5>
                    <p class="card-text text-muted">Learn the basics of HTML tags, document structure, and semantic markup for professional web pages.</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center">
                    <button class="btn btn-primary w-100">Enroll Now</button>
                </div>
            </div>
        </div>

        <!-- Topic 2 -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://via.placeholder.com/400x250" class="card-img-top" alt="Topic Image">
                <div class="card-body">
                    <h5 class="card-title text-primary">CSS Styling</h5>
                    <p class="card-text text-muted">Style and design responsive web layouts using CSS and modern grid/flexbox techniques.</p>
                </div>
            </div>
        </div>

        <!-- Topic 3 -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://via.placeholder.com/400x250" class="card-img-top" alt="Topic Image">
                <div class="card-body">
                    <h5 class="card-title text-primary">JavaScript Essentials</h5>
                    <p class="card-text text-muted">Build interactive websites with JavaScript fundamentals — variables, functions, and event handling.</p>
                </div>
            </div>
        </div>

        <!-- Topic 4 -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://via.placeholder.com/400x250" class="card-img-top" alt="Topic Image">
                <div class="card-body">
                    <h5 class="card-title text-primary">Backend with PHP & MySQL</h5>
                    <p class="card-text text-muted">Understand server-side development, database integration, and API building for real-world apps.</p>
                </div>
            </div>
        </div>
    </div>
</div>
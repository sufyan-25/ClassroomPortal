@model SymphonyLimited.Models.Course
@{
    ViewData["Title"] = "Course Management";
}
<div class="content">
    <div class="container-fluid">
        <div id="result"></div>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold text-warning">Manage Courses</h3>
            <div>
                <button class="btn btn-success btn-sm" onclick="openModal(modal)">Add New <strong>Course</strong></button>
                <button class="btn btn-success btn-sm" onclick="openModal(modal2)">Add New <strong>Topic</strong></button>
                <a asp-action="Course" asp-controller="Home" class="btn btn-primary btn-md">Go To Courses Page</a>
            </div>
        </div>
        <div class="loadContainer">
        </div>
    </div>
</div>

<!-- Form -->
<div class="modal fade" id="openModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add Course</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Create" asp-controller="Course" id="form">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" name="Name" type="text" class="form-control fName" id="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">Description</label>
                        <div class="d-flex">
                            <img src="~/img/no_img.jpg"
                                 alt="Current About Image"
                                 class="border-0 mx-3 imagePreview" style="width:150px;">
                            <textarea asp-for="Description" name="Description" class="form-control fDescription" id="Description" rows="2"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="GalleryID" type="text" class="GID" name="GalleryID" hidden />
                        <span asp-validation-for="GalleryID" class="text-danger"></span>
                        <button type="button" onclick="openModal(imgModal)" class="btn btn-warning px-4">Select Image</button>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Duration" class="form-label fw-semibold"></label>
                        <input asp-for="Duration" name="Duration" type="text" class="form-control" id="Duration" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Fee" class="form-label fw-semibold"></label>
                        <input asp-for="Fee" name="Fee" type="text" class="form-control" id="Fee" />
                        <span asp-validation-for="Fee" class="text-danger"></span>
                    </div>
                    <button id="save" type="submit" class="btn btn-success px-4 save">Add New</button>
                    <button id="update" type="button" onclick="UpdateData(event,'update')" class="btn btn-secondary px-4 update" style="display:none;">Update Changes</button>
                    <button type="reset" id="clear" class="btn btn-secondary px-4">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="otherModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add Course</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="formLoad">
                @await Html.PartialAsync("_PartialTopicForm")
            </div>
        </div>
    </div>
</div>

<!-- Modal For Gallery -->
<div class="modal fade" id="imageModal" tabindex="-3" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Select Image</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="ImageSelector">
                <!-- Partial Page Load Here-->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="imgSelect">Select</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal For Delete -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Confirmed Delete?</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="confirmedDelete">Yes</button>
                <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal" onclick="closeModal()">No</button>
            </div>
        </div>
    </div>
</div>

<!-- End Form -->


         //Update Edit Value /////////////////////////////////////////////////////
         function UpdateData(e,btn){
            if(btn=="update"){
                if (!$('#Name').val().trim() || !$("#Description").val().trim() || !$("#Duration").val().trim()){
                    $("#result").html(`<div class="alert alert-danger">Fill all the input fields and select an image!</div>`)
                return;
                }else{
                 Manage(e,id,"Edit");       //Function Name for Course
                 $(".save").show();
                 $(".update").hide();
                 modal.hide();      //for Course Modal
                }
            }else if(btn=="update2"){
                 Manage(e,id,"EditTopic");  //Function Name for Topics
                 $(".save").show();
                 $(".update").hide();
                 modal2.hide();     //for Topic Modal
            }
         }

        //Delete Data ///////////////////////////////////////////////////////////////
        $(document).on("click","#delete",function(){
            id = $(this).closest("div").find("#FID").val();
            console.log(id);
            deleteModal.show();
        });
        $("#confirmedDelete").on("click",function(e){
            Manage(e,id,"Delete","");
                        deleteModal.hide();
        });

         // Update Data through AJAX ////////////////////////////////////////////////////
        function Manage(event,id,action){
            event.preventDefault();

            try{
                let form = $("#form").is(":visible")?$("#form")[0]:$("#form2")[0];
                let formData = new FormData(form);

                $.ajax({
                    url:`/Course/${action}/${id}`,
                    type:'POST',
                    data: formData,
                    contentType:false,
                    processData:false,
                    success: function(res){
                        if (res.success) {
                            $("#result").html(`<div class="alert alert-success">${res.message}</div>`);
                            $(".loadContainer").load("/Course/List");
                        } else {
                                let html = "<ul class='text-danger'>";
                                res.message.forEach(e => html += `<li>${e}</li>`);
                                html += "</ul>";
                                $("#result").html(html);
                        }
                    },
                    error: function () {
                        $("#result").html(`<div class="alert alert-danger">Server error</div>`);
                    }
                });
            }catch(err){
                console.log(err+" Failed to Post Data "+action);
            }
        }
    </script>

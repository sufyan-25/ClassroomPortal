@model SymphonyLimited.Models.Result
@{
    Layout = "HomeLayout";
}
@{
    ViewData["Title"] = "Results";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
            <input type="text" id="searchInput" class="form-control me-2" placeholder="Search by StudentID">
            <button id="searchBtn" class="btn btn-primary">Search</button>
    </div>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <!-- Result Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-1">Entrance Exam Result</h5>
            <p class="text-muted mb-4">Find and view student results instantly</p>

            <div class="row gy-3 text-dark">
                <div class="col-md-6">
                    <strong>Student Name : <span id="studentName" class="text-success">@Model.Student.Name</span></strong>
                </div>
                <div class="col-md-6">
                    <strong>Student ID : <span id="rollNo" class="text-success">@Model.StudentID</span></strong>
                </div>
                <div class="col-md-6">
                    <strong>Class : <span id="className">—</span></strong>
                </div>
                <div class="col-md-6">
                    <strong>Course:</strong> <span id="course">—</span>
                </div>
                <div class="col-md-6">
                    <strong>Course Fee:</strong> <span id="courseFee">—</span>
                </div>
                <div class="col-md-6">
                    <strong>Payment Last Date:</strong> <span id="paymentDate">—</span>
                </div>
            </div>

            <hr>

            <div class="mt-3">
                <h6 class="fw-bold">Marks:</h6>
                <div class="progress" style="height: 25px;">
                    <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="100">
                        @Model.Marks
                    </div>
                </div>
                <div class="mt-2 text-end">
                    <span id="gradeText" class="fw-bold text-secondary">Grade: —</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-4 text-muted">
        <small>Branch Address: <span id="branchAddress">—</span></small>
    </div>
</div>
@section Scripts {
    <script>
          let bar = document.getElementById("progressBar");
                function animateProgress(percent) {
          let current = 0;
          const step = setInterval(() => {
            if (current >= percent) clearInterval(step);
            else {
              current++;
              bar.style.width = current + "%";
              bar.textContent = current + "%";
            }
          }, 20); // speed
        }

        // Example usage after fetching result:
        animateProgress(bar.textContent); // e.g., 82%
        document.getElementById("gradeText").textContent = "Grade: A";

    </script>
}
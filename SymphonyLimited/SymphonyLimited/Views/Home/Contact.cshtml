@model IEnumerable<SymphonyLimited.Models.Contact>
@{
    ViewData["Title"] = "Contact";
}
@{
    Layout = "HomeLayout";
}

<section class="contact-section py-5">
    <div class="container">
        <div class="row g-4 align-items-start">

            <!-- Left: Main Branch Info -->
            <div class="col-lg-5">
                <div class="p-4 rounded-4 shadow" style="background:rgba(255,255,255,0.1); border:1px solid rgba(255,255,255,0.2);">
                    <h2 class="mb-4" style="color:#C0C0C0;">Main Branch</h2>

                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3">
                            <i class="fa fa-map-marker-alt fa-lg text-light"></i>
                        </div>
                        <p class="mb-0 text-light">Karachi</p>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3">
                            <i class="fa fa-phone fa-lg text-light"></i>
                        </div>
                        <p class="mb-0 text-light">+92 300 1234567</p>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3">
                            <i class="fa fa-envelope fa-lg text-light"></i>
                        </div>
                        <p class="mb-0 text-light">info@symphony.com</p>
                    </div>

                    <div class="mt-4">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d13255.12555630706!2d67.0107154!3d24.8578194!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1sen!2s!4v1759962115569!5m2!1sen!2s"
                                width="100%" height="200" style="border:1px solid rgba(255,255,255,0.2); border-radius:8px;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>

            <!-- Right: Contact Form -->
            <div class="col-lg-7">
                <div class="p-4 rounded-4 shadow" style="background:#F8F9FA;color:#001F3F;">
                    <h2 class="mb-4" style="color:#001F3F;">Get In Touch</h2>
                    <form>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Your Name</label>
                            <input type="text" class="form-control" placeholder="Enter your name">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email Address</label>
                            <input type="email" class="form-control" placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Subject</label>
                            <input type="text" class="form-control" placeholder="Enter subject">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Message</label>
                            <textarea class="form-control" rows="4" placeholder="Write your message..."></textarea>
                        </div>
                        <button type="submit" class="btn px-4 py-2 text-white" style="background-color:#001F3F; border:1px solid silver; border-radius:8px;">
                            Send Message
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
<hr />

<!-- Contact / Branch Section -->
<div class="contact-section p-5">
    <div class="row justify-content-center text-center mb-4">
        <div class="col-lg-8">
            <h2 class="fw-bold" style="color:#ffffff;">Our Branches</h2>
            <p style="color:#d0d8ff; font-size:1.05rem;">
                Get in touch with any of our locations for assistance or inquiries.
            </p>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var x in Model)
        {
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <div class="mb-3 text-primary">
                        <i class="fa fa-phone-alt fa-2x"></i>
                    </div>
                    <h5 class="card-title mb-1">@x.BranchName</h5>
                    <p class="text-muted small mb-3">Pakistan</p>
                    <p class="mb-2"><strong>Call Us:</strong> @x.PTCL</p>
                    <p class="mb-3"><strong>Whatsapp</strong>@x.Whatsapp</p>
                    <p class="mb-3"><strong>Email:</strong> info@symphony.com</p>
                    <div class="ratio ratio-1x1">
                        <iframe src="@x.Location"
                                class="rounded"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>